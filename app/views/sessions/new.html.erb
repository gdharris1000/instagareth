<div class="welcome">


    <div class="container">
        <div class="card text-center welcome-box">
            <div class="card-body">
                <h1 class="card-title">Login</h1>
                <hr>
                <%= form_tag '/login' do%>
                    <%= label_tag :email %>
                    <%= text_field_tag :email %>

                    <%= label_tag :password %>
                    <%= password_field_tag :password %>
                <br><br>
                    <%= submit_tag "Login", :class => "btn-primary"%>
                <% end %>
            </div>
         </div>
     </div>

</div>
